<Window x:Class="HelloSleep.AccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloSleep"
        mc:Ignorable="d"
        Title="AccountWindow" Height="770" Width="662"
        Background="#F3F7FE">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="120"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Button
                x:Name="LogoBtn"  
                 Background="#F3F7FE"
                Height="101" Width="310" 
                Grid.Column="1"
                Grid.ColumnSpan="3"
                Grid.Row="1"
                VerticalAlignment="Top"
                BorderThickness="0">
            <Image Source="Images/logoHelloSleep.png" Stretch="UniformToFill">
            </Image>
        </Button>

        <Rectangle x:Name="BackgroundRec" Fill="#e7f0ff" Grid.Column="1" Grid.Row="2" Grid.RowSpan="4" Grid.ColumnSpan="3"  RadiusX="10" RadiusY="10" Stroke="#99b7e8" StrokeThickness="1.5">
            <Rectangle.Effect>
                <DropShadowEffect
                    ShadowDepth="4"
                    Direction="330"
                    Color="Black"
                    Opacity="0.5"
                    BlurRadius="4"/>
            </Rectangle.Effect>
        </Rectangle>

        <Button Grid.Row="3" Grid.Column="2" x:Name="RegisterBTN" Click="RegisterBTN_Click" Foreground="#FF96C0FB" Content="Registreren" Background="#FFE7F0FF" 
            FontWeight="Bold" 
            HorizontalAlignment="Center" 
            BorderThickness="1,1,1,1" Width="180" Height="100"
             FontSize="22">

            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>

            <Button.Effect>
                <DropShadowEffect
                    ShadowDepth="4"
                    Direction="330"
                    Color="Black"
                    Opacity="0.5"
                    BlurRadius="4"/>
            </Button.Effect>
        </Button>

        <Button Grid.Row="2" Grid.Column="2" x:Name="InloggenBTN" Click="InloggenBTN_Click" Foreground="#FF96C0FB" Content="Log In" Background="#FFE7F0FF" 
            FontWeight="Bold" 
            HorizontalAlignment="Center" 
            BorderThickness="1,1,1,1" Width="180" Height="100"
             FontSize="22">

            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>

            <Button.Effect>
                <DropShadowEffect
                    ShadowDepth="4"
                    Direction="330"
                    Color="Black"
                    Opacity="0.5"
                    BlurRadius="4"/>
            </Button.Effect>
        </Button>

        <Button Grid.Row="5" Grid.Column="2" x:Name="CrudBTN" Click="CrudBTN_Click" Foreground="#FF96C0FB" Content="Data Window" Background="#FFE7F0FF" 
            FontWeight="Bold" 
            HorizontalAlignment="Center" 
            BorderThickness="1,1,1,1" Width="180" Height="100"
             FontSize="22">

            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>

            <Button.Effect>
                <DropShadowEffect
                    ShadowDepth="4"
                    Direction="330"
                    Color="Black"
                    Opacity="0.5"
                    BlurRadius="4"/>
            </Button.Effect>
        </Button>

    </Grid>
</Window>
